<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@android:id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
        android:gravity="center_vertical"
        android:src="@android:drawable/ic_dialog_dialer" />
    
    <TextView 
	    android:id="@android:id/text1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceListItemSmall"
	    android:gravity="center_vertical"
	    android:minHeight="?android:attr/listPreferredItemHeightSmall"
	    android:maxHeight="?android:attr/listPreferredItemHeightSmall"
	    android:height="?android:attr/listPreferredItemHeightSmall"
	/>

</LinearLayout>
